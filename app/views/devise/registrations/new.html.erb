<%= render('shared/wrapper', title: "Sign up to proper job", illustration_url:  cl_image_tag('zfd3liaawmeqbhmevu7x'))%>
<div class="container py-5">
  <div class="signup-wrapper">
    <div class="signup-stage-1">
      <p>What type of user are you?</p>
      <div class="d-flex">
        <div class="card-selection"></div>
        <div class="card-selection"></div>
        <div class="card-selection"></div>
        <div class="card-selection"></div>
      </div>
    </div>
  </div>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <%= f.input :email,
                  required: false,
                  placeholder: "Email Address",
                  label: false  %>
      <%= f.input :first_name, placeholder: "First Name",
                  label: false  %>
      <%= f.input :last_name, placeholder: "Last Name",
                  label: false  %>
      <%= f.input :phone_number, placeholder: "Phone Number",
                  label: false  %>
      <%= f.input :user_type,
                  collection: [['Tenant', 'tenant'], ['Landlord', 'landlord'], ['Contractor', 'contractor']],
                  label_method: :first,
                  value_method: :second,
                  selected: "Tenant",
                  label: false  %>
      <%= f.input :contractor_type,
                  required: false,
                  placeholder: "Contractor Type (if applicable)",
                  label: false %>
      <%= f.input :password,
                  required: false,
                  placeholder: "Create a Password",
                  hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                  input_html: { autocomplete: "new-password" },
                  label: false %>
      <%= f.input :password_confirmation,
                  required: true,
                  placeholder: "Confirm Your Password",
                  input_html: { autocomplete: "new-password" },
                  label: false %>
      <%= f.input :avatar,  label: "Upload a profile photo"  %>
      <%= f.input :avatar_cache, as: :hidden %>
    </div>

    <div class="form-actions mb-4">
      <%= f.button :submit, "Sign up", class: 'btn btn-primary w-100' %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>

</div>
